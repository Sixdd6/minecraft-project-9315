#As/At: Written book
summon item ~ ~ ~ {Tags:["bcstcmp_tmp_setup"],Item:{id:"minecraft:compass",Count:1b}}
data modify entity @e[tag=bcstcmp_tmp_setup,limit=1] Item.tag.LodestonePos.X set from entity @s Item.tag.LodestonePos.X
data modify entity @e[tag=bcstcmp_tmp_setup,limit=1] Item.tag.LodestonePos.Y set from entity @s Item.tag.LodestonePos.Y
data modify entity @e[tag=bcstcmp_tmp_setup,limit=1] Item.tag.LodestonePos.Z set from entity @s Item.tag.LodestonePos.Z
data modify entity @e[tag=bcstcmp_tmp_setup,limit=1] Item.tag.LodestoneDimension set from entity @s Item.tag.LodestoneDimension
data modify entity @e[tag=bcstcmp_tmp_setup,limit=1] Item.tag.LodestoneTracked set value 0b
data modify entity @e[tag=bcstcmp_tmp_setup,limit=1] Item.tag.display.Name set from entity @s Item.tag.pages[0]
kill @s
tag @e[tag=bcstcmp_tmp_setup,limit=1] remove bcstcmp_tmp_setup